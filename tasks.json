    "version": "2.0.0",
    "tasks": [
        {
            "label": "Markdown pandoc make PDF",
            "type": "shell",
            "command": "pandoc -V geometry:margin=1in ${fileBasename} -o ${fileBasenameNoExtension}.pdf",
            "group": "markdown",
            "presentation": {
                "reveal": "always",
                "panel": "new"
            }
        },
    ]
}
