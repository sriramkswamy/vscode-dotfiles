{
    // Place your snippets for markdown here. Each snippet is defined under a snippet name and has a prefix, body and
    // description. The prefix is what is used to trigger the snippet and the body will be expanded and inserted. Possible variables are:
    // $1, $2 for tab stops, $0 for the final cursor position, and ${1:label}, ${2:another} for placeholders. Placeholders with the
    // same ids are connected.
    // Example:
    // "Print to console": {
    // 	"prefix": "log",
    // 	"body": [
    // 		"console.log('$1');",
    // 		"$2"
    // 	],
    // 	"description": "Log output to console"
    // }

    "heading 1": {
        "prefix": "h1",
        "body": [
            "# $1"
		],
		"description": "heading 1"
    },

    "heading 2": {
        "prefix": "h2",
        "body": [
            "## $1"
		],
		"description": "heading 2"
    },

    "heading 3": {
        "prefix": "h3",
        "body": [
            "### $1"
		],
		"description": "heading 3"
    },

    "heading 4": {
        "prefix": "h4",
        "body": [
            "#### $1"
		],
		"description": "heading 4"
    },

    "heading 5": {
        "prefix": "h5",
        "body": [
            "##### $1"
		],
		"description": "heading 5"
    },

    "heading 6": {
        "prefix": "h6",
        "body": [
            "###### $1"
		],
		"description": "heading 6"
    },

    "block quote": {
        "prefix": "qu",
        "body": [
            "> $1"
		],
		"description": "block quote"
    },

    "unordered list": {
        "prefix": "ul",
        "body": [
            "* $1"
		],
		"description": "unordered list"
    },

    "ordered list": {
        "prefix": "ol",
        "body": [
            "${1:1}. $2"
		],
		"description": "ordered list"
    },

    "horizontal rule": {
        "prefix": "hr",
        "body": [
            "***",
            "$1"
		],
		"description": "horizontal rule"
    },

    "link": {
        "prefix": "lk",
        "body": [
            "[${1:description}](${2:url})$3"
		],
		"description": "link"
    },

    "reference link": {
        "prefix": "rlk",
        "body": [
            "[${1:description}][${2:ref_id}]$3"
		],
		"description": "reference link"
    },

    "id for the reference": {
        "prefix": "idref",
        "body": [
            "[id]: ${1:url}"
		],
		"description": "id for the reference"
    },

    "emphasis": {
        "prefix": "em",
        "body": [
            "*$1* $2"
		],
		"description": "emphasis"
    },

    "strong": {
        "prefix": "str",
        "body": [
            "**$1** $2"
		],
		"description": "strong"
    },

    "backtick code": {
        "prefix": "code",
        "body": [
            "``$1`` $2"
		],
		"description": "backtick code"
    },

    "image inline": {
        "prefix": "img",
        "body": [
            "![${1:alt_text}](${2:url/path}) $3"
		],
		"description": "image inline"
    },

    "reference image": {
        "prefix": "refi",
        "body": [
            "[${1:alt_text}][${2:ref_id}]$3"
		],
		"description": "reference image"
    },

    "automatic line": {
        "prefix": "alk",
        "body": [
            "<${1:url}> $2"
		],
        "description": "automatic line"
    }

}
